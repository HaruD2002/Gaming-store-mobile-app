<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/while2"
    tools:context=".views.UpdateStoreActivity">

    <!-- Store Information -->

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="135dp"
        android:src="@drawable/shoppingcart"
        android:id="@+id/updateImage"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"/>

    <EditText
        android:id="@+id/storeNameEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/boder"
        android:layout_marginTop="7dp"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        android:hint="Store Name" />

    <EditText
        android:id="@+id/storeAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/boder"
        android:layout_marginTop="7dp"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        android:hint="Store Address" />

    <EditText
        android:id="@+id/storePhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/boder"
        android:layout_marginTop="7dp"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        android:hint="Phone Number" />

    <EditText
        android:id="@+id/storeOperatingHoursEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/boder"
        android:layout_marginTop="7dp"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        android:hint="Operating Hours" />

    <!-- Product Management -->

    <Button
        android:id="@+id/addProductButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:cornerRadius = "20dp"
        android:backgroundTint="@color/blue1"
        android:text="Add Product" />

    <ListView
        android:id="@+id/productListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Media Management -->

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:cornerRadius = "20dp"
        android:backgroundTint="@color/blue1"
        android:text="Upload Image" />

    <Button
        android:id="@+id/uploadVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cornerRadius = "20dp"
        android:backgroundTint="@color/blue1"
        android:text="Upload Video" />

    <!-- Save Changes Button -->

    <Button
        android:id="@+id/saveChangesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius = "20dp"
        android:backgroundTint="@color/blue1"
        android:text="Save Changes" />

</LinearLayout>